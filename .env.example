# plantopo-strava-sync configuration

# Server configuration (optional)
HOST=localhost
PORT=4101

# Database configuration (optional)
DATABASE_PATH=./data.db

# Strava API configuration - PRIMARY CLIENT (REQUIRED)
# Get these from https://www.strava.com/settings/api
STRAVA_PRIMARY_CLIENT_ID=your_primary_client_id_here
STRAVA_PRIMARY_CLIENT_SECRET=your_primary_client_secret_here
STRAVA_PRIMARY_VERIFY_TOKEN=your_random_verify_token_here

# Strava API configuration - SECONDARY CLIENT (OPTIONAL)
# Create a second application in Strava for development
# Note: Secondary client is optional. If you set any STRAVA_SECONDARY_* variable,
# you must set all three (CLIENT_ID, CLIENT_SECRET, and VERIFY_TOKEN).
STRAVA_SECONDARY_CLIENT_ID=your_secondary_client_id_here
STRAVA_SECONDARY_CLIENT_SECRET=your_secondary_client_secret_here
STRAVA_SECONDARY_VERIFY_TOKEN=your_random_verify_token_here

# Internal API authentication (REQUIRED)
# Generate a secure random key for internal API access
INTERNAL_API_KEY=your_secure_random_key_here

# Logging configuration (optional)
# Options: debug, info, warn, error
LOG_LEVEL=info

# Metrics configuration (optional)
METRICS_ENABLED=true
METRICS_HOST=127.0.0.1
METRICS_PORT=9090
